{
  "title": "Quant Signals - Diagnostics",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "5s",
  "time": { "from": "now-1h", "to": "now" },
  "tags": ["quant", "signals", "prometheus", "diagnostics"],
  "templating": {
    "list": [
      {
        "name": "ds",
        "type": "datasource",
        "query": "prometheus",
        "current": { "text": "Prometheus", "value": "Prometheus" },
        "label": "Datasource",
        "hide": 0
      },
      {
        "name": "sym",
        "label": "Symbol",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "$ds" },
        "refresh": 2,
        "query": "label_values(quant_signals_final_total, sym)",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      },
      {
        "name": "dir",
        "label": "Direction",
        "type": "custom",
        "query": "buy,sell",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Rates",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 }
    },

    {
      "id": 101,
      "type": "timeseries",
      "title": "Final / min",
      "description": "sum by (sym,dir) (rate(quant_signals_final_total[1m]))",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (sym,dir) (rate(quant_signals_final_total{sym=~\"$sym\", dir=~\"$dir\"}[1m]))",
          "legendFormat": "{{sym}} {{dir}}"
        }
      ],
      "gridPos": { "x": 0, "y": 1, "w": 12, "h": 8 },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },

    {
      "id": 102,
      "type": "timeseries",
      "title": "Detected vs Final / min",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (sym) (rate(quant_signals_detected_total{sym=~\"$sym\", dir=~\"$dir\"}[1m]))",
          "legendFormat": "detected - {{sym}}"
        },
        {
          "refId": "B",
          "expr": "sum by (sym) (rate(quant_signals_final_total{sym=~\"$sym\", dir=~\"$dir\"}[1m]))",
          "legendFormat": "final - {{sym}}"
        }
      ],
      "gridPos": { "x": 12, "y": 1, "w": 12, "h": 8 },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },

    {
      "id": 201,
      "type": "timeseries",
      "title": "Drops / min (by reason)",
      "description": "rate(quant_router_dropped_total[5m]) 按 reason 堆叠",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (reason) (rate(quant_router_dropped_total{sym=~\"$sym\", dir=~\"$dir\"}[5m]))",
          "legendFormat": "{{reason}}"
        }
      ],
      "gridPos": { "x": 0, "y": 9, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "custom": { "stacking": { "mode": "normal" } } }
      },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },

    {
      "id": 202,
      "type": "bargauge",
      "title": "Top symbols by final rate (5m)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, sum by (sym) (rate(quant_signals_final_total{dir=~\"$dir\"}[5m])))",
          "legendFormat": "{{sym}}"
        }
      ],
      "gridPos": { "x": 12, "y": 9, "w": 12, "h": 8 },
      "options": {
        "displayMode": "gradient",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },

    {
      "type": "row",
      "title": "KPIs",
      "gridPos": { "x": 0, "y": 17, "w": 24, "h": 1 }
    },

    {
      "id": 301,
      "type": "stat",
      "title": "Final total (filtered)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(quant_signals_final_total{sym=~\"$sym\", dir=~\"$dir\"})"
        }
      ],
      "gridPos": { "x": 0, "y": 18, "w": 6, "h": 5 }
    },
    {
      "id": 302,
      "type": "stat",
      "title": "Detected total (filtered)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(quant_signals_detected_total{sym=~\"$sym\", dir=~\"$dir\"})"
        }
      ],
      "gridPos": { "x": 6, "y": 18, "w": 6, "h": 5 }
    },
    {
      "id": 303,
      "type": "stat",
      "title": "Drops total (filtered)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(quant_router_dropped_total{sym=~\"$sym\", dir=~\"$dir\"})"
        }
      ],
      "gridPos": { "x": 12, "y": 18, "w": 6, "h": 5 }
    },
    {
      "id": 304,
      "type": "stat",
      "title": "Pass ratio (final / detected, 5m)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(quant_signals_final_total{sym=~\"$sym\", dir=~\"$dir\"}[5m])) / clamp_min(sum(rate(quant_signals_detected_total{sym=~\"$sym\", dir=~\"$dir\"}[5m])), 1e-9)"
        }
      ],
      "gridPos": { "x": 18, "y": 18, "w": 6, "h": 5 }
    },

    {
      "id": 401,
      "type": "timeseries",
      "title": "Router latency p95 (ms, 5m)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(quant_router_latency_ms_bucket{sym=~\"$sym\", dir=~\"$dir\"}[5m])))"
        }
      ],
      "gridPos": { "x": 0, "y": 23, "w": 12, "h": 7 }
    },

    {
      "id": 402,
      "type": "table",
      "title": "Recent finals (last 20 by sym/dir/src)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(20, quant_signals_final_total{sym=~\"$sym\", dir=~\"$dir\"})",
          "legendFormat": "{{sym}} {{dir}} {{src}}"
        }
      ],
      "options": { "showHeader": true, "footer": { "show": false } },
      "gridPos": { "x": 12, "y": 23, "w": 12, "h": 7 }
    }
  ]
}
