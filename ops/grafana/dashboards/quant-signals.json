{
  "uid": "quant-signals",
  "title": "量化信号 - 总览",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 3,
  "tags": ["quant", "signals", "prometheus"],
  "editable": true,
  "refresh": "5s",
  "time": { "from": "now-1h", "to": "now" },

  "templating": {
    "list": [
      {
        "name": "ds",
        "type": "datasource",
        "query": "prometheus",
        "current": { "text": "prometheus", "value": "prometheus" },
        "hide": 0,
        "label": "数据源"
      },
      {
        "name": "sym",
        "label": "交易对",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "$ds" },
        "refresh": 2,
        "query": "label_values(quant_signals_final_total, sym)",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["全部"], "value": ["$__all"] }
      },
      {
        "name": "dir",
        "label": "方向",
        "type": "custom",
        "includeAll": true,
        "multi": true,
        "query": "buy,sell",
        "current": { "selected": true, "text": ["全部"], "value": ["$__all"] }
      }
    ]
  },

  "panels": [
    {
      "type": "row",
      "title": "速率指标",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 }
    },

    {
      "id": 1,
      "type": "timeseries",
      "title": "最终信号 / 每分钟",
      "description": "sum by (sym,dir)(rate(quant_signals_final_total[1m]))",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (sym,dir) (rate(quant_signals_final_total{sym=~\"$sym\",dir=~\"$dir\"}[1m]))",
          "legendFormat": "{{sym}} {{dir}}"
        }
      ],
      "gridPos": { "x": 0, "y": 1, "w": 12, "h": 8 },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },

    {
      "id": 2,
      "type": "timeseries",
      "title": "检测 vs 最终 / 每分钟",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (sym) (rate(quant_signals_detected_total{sym=~\"$sym\",dir=~\"$dir\"}[1m]))",
          "legendFormat": "检测 - {{sym}}"
        },
        {
          "refId": "B",
          "expr": "sum by (sym) (rate(quant_signals_final_total{sym=~\"$sym\",dir=~\"$dir\"}[1m]))",
          "legendFormat": "最终 - {{sym}}"
        }
      ],
      "gridPos": { "x": 12, "y": 1, "w": 12, "h": 8 },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },

    {
      "id": 3,
      "type": "timeseries",
      "title": "丢弃原因 / 每分钟",
      "description": "sum by (reason)(rate(quant_router_dropped_total[1m]))",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (reason) (rate(quant_router_dropped_total{sym=~\"$sym\",dir=~\"$dir\"}[1m]))",
          "legendFormat": "丢弃.{{reason}}"
        }
      ],
      "gridPos": { "x": 0, "y": 9, "w": 12, "h": 8 },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },

    {
      "id": 4,
      "type": "bargauge",
      "title": "按最终信号速率排名前5 (5分钟)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, sum by (sym) (rate(quant_signals_final_total[5m])))",
          "legendFormat": "{{sym}}"
        }
      ],
      "gridPos": { "x": 12, "y": 9, "w": 12, "h": 8 },
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },

    {
      "type": "row",
      "title": "累计指标",
      "gridPos": { "x": 0, "y": 17, "w": 24, "h": 1 }
    },

    {
      "id": 5,
      "type": "stat",
      "title": "最终信号总数 (筛选)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(quant_signals_final_total{sym=~\"$sym\",dir=~\"$dir\"})"
        }
      ],
      "gridPos": { "x": 0, "y": 18, "w": 6, "h": 5 }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "检测信号总数 (筛选)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(quant_signals_detected_total{sym=~\"$sym\",dir=~\"$dir\"})"
        }
      ],
      "gridPos": { "x": 6, "y": 18, "w": 6, "h": 5 }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "丢弃总数 (筛选)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(quant_router_dropped_total{sym=~\"$sym\",dir=~\"$dir\"})"
        }
      ],
      "gridPos": { "x": 12, "y": 18, "w": 6, "h": 5 }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "丢弃比例 (最终 / 检测)",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "1 - ( sum(rate(quant_signals_final_total{sym=~\"$sym\",dir=~\"$dir\"}[5m])) / clamp_min(sum(rate(quant_signals_detected_total{sym=~\"$sym\",dir=~\"$dir\"}[5m])), 1e-9) )"
        }
      ],
      "gridPos": { "x": 18, "y": 18, "w": 6, "h": 5 }
    },

    {
      "type": "row",
      "title": "最新最终信号",
      "gridPos": { "x": 0, "y": 23, "w": 24, "h": 1 }
    },

    {
      "id": 9,
      "type": "table",
      "title": "最近 15 分钟内前20个最终信号",
      "datasource": { "type": "prometheus", "uid": "$ds" },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(20, increase(quant_signals_final_total{sym=~\"$sym\",dir=~\"$dir\"}[15m]))",
          "legendFormat": "{{sym}} {{dir}}"
        }
      ],
      "options": { "showHeader": true, "footer": { "show": false } },
      "gridPos": { "x": 0, "y": 24, "w": 24, "h": 7 }
    }
  ]
}
